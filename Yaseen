<script>
const WHEEL = [0,32,15,19,4,21,2,25,17,34,6,27,13,36,11,30,8,23,10,5,24,16,33,1,20,14,31,9,22,18,29,7,28,12,35,3,26];
document.getElementById('btn').addEventListener('click', predict);

function predict(){ 
  try {
    const raw = document.getElementById('nums').value.trim();
    const nums = raw.split(/[^0-9]+/).map(n=>parseInt(n)).filter(n=>!isNaN(n)&&n>=0&&n<=36);
    const msg = document.getElementById('msg');
    const out = document.getElementById('out');
    if(nums.length < 5){ msg.textContent = 'Ø£Ø¯Ø®Ù„ 5 Ø£Ø±Ù‚Ø§Ù… Ø¹Ù„Ù‰ Ø§Ù„Ø£Ù‚Ù„.'; out.innerHTML=''; return; }
    msg.textContent = '';
    const probs = calc(nums);
    const arr = probs.map((p,i)=>({n:i,p})).sort((a,b)=>b.p-a.p);
    let html = '<h3>Top 3</h3><ol>';
    for(let i=0;i<3;i++) html += `<li>#${arr[i].n} ~ ${(arr[i].p*100).toFixed(2)}%</li>`;
    html += '</ol><p style="color:#888;font-size:13px">* Ø§Ø­ØªÙ…Ø§Ù„Ø§Øª ØªÙ‚Ø±ÙŠØ¨ÙŠØ©ØŒ Ù„ÙŠØ³Øª Ø¶Ù…Ø§Ù† Ø±Ø¨Ø­.</p>';
    out.innerHTML = html;
  } catch(e){
    document.getElementById('msg').textContent = 'Error: '+e;
    console.error(e);
  }
}

function calc(nums){
  const len=nums.length;
  const freq=new Array(37).fill(0);
  nums.forEach((n,i)=>{
    const w=Math.exp((i+1)/len); // ÙˆØ²Ù† Ù„Ù„Ø£Ø­Ø¯Ø«
    freq[n]+=w;
  });
  const smooth=new Array(37).fill(0);
  const a=0.6;
  for(let i=0;i<WHEEL.length;i++){
    const n=WHEEL[i], l=WHEEL[(i-1+WHEEL.length)%WHEEL.length], r=WHEEL[(i+1)%WHEEL.length];
    smooth[n]+=freq[n]*(1-a) + (freq[l]+freq[r])*(a/2);
  }
  const s=smooth.reduce((x,y)=>x+y,0);
  return smooth.map(v=>v/s);
}
</script>
